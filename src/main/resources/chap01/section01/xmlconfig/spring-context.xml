<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- MemberDTO bean 등록 -->

    <!-- 기본생성자를 이용하여 객체생성-->
    <bean id="member" class="chap01_Ioc_container.com.common.MemberDTO">
        <!-- int 타입의 첫 번째 파라미터에 1 값을 전달 -->
        <constructor-arg index="0" value="1"/>
        <!-- String 타입의 id 파라미터에 "user01" 값을 전달 -->
        <constructor-arg name="id" value="user01"/>
        <constructor-arg index="2" value="pass01"/>
        <constructor-arg index="3" value="taemin"/>

    </bean>
</beans>